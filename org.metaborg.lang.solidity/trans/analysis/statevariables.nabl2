module analysis/statevariables

imports
  signatures/-

signature
  namespaces
    //StateVar { constant : term }

rules
  [[ StateVariable(solty, mod, name, assignment) ^ (s) ]] :=
    [[ solty ^ (s) : tyStateVar ]],
    
    Var{name} <- s,
    Var{name}.origin   := StateVariable(),
    Var{name}.constant := FalseC(),
    Var{name} : tyStateVar !.
